<h1><%= @task.title %></h1>

<ul>
<li>Details: <%= @task.details %></li>
<li>Completed: <% if @task.completed %>
<%='Done' %>
<% else %>
<%='Not completed' %>
<% end %></li>
</ul>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<br>

<%= link_to 'Edit a task', task_edit_path%>
